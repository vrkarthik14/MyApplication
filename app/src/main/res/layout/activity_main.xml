<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codex_pc.myapplication.MainActivity">

    <Button
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/student"
        android:layout_alignBottom="@+id/student"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:background="@drawable/common_full_open_on_phone"
        android:drawableTop="@drawable/teacherclass"
        android:text="User" />

    <Button
        android:id="@+id/student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/common_full_open_on_phone"
        android:drawableTop="@drawable/user"
        android:text="Admin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/teacher"
            android:layout_alignEnd="@+id/student"
            android:layout_marginBottom="42dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="College"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="46sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_toStartOf="@+id/teacher"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="BOOK"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="46sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
