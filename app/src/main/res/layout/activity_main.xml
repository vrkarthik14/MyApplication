<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codex_pc.myapplication.MainActivity">

    <Button
        android:id="@+id/teacherlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/studentbtn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Teacher " />

    <Button
        android:id="@+id/studentbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacherlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@android:color/holo_blue_bright"
        android:text="student  " />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/studentbtn"
        android:layout_below="@+id/studentbtn"
        android:layout_marginTop="144dp"
        android:text="academia" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="45dp"
        android:layout_toStartOf="@+id/button3"
        android:text="wallet" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button4"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/button3"
        android:text="college forum" />

</RelativeLayout>
